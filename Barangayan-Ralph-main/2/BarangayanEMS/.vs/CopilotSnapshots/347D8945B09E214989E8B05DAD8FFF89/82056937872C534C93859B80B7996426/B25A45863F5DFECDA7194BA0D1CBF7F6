            Controls.Add(_txtApplicantName);

            Controls.Add(CreateSectionLabel("Contact Number *", ref top, 240));
            _txtContactNumber = CreateTextBox(top - 20, 180, 240);
            _txtContactNumber.Text = "+63 XXX XXX XXXX";
            Controls.Add(_txtContactNumber);
            top += 30;

            Controls.Add(CreateSectionLabel("Purpose *", ref top));
            _txtPurpose = CreateTextBox(top - 20, 420);
            Controls.Add(_txtPurpose);
