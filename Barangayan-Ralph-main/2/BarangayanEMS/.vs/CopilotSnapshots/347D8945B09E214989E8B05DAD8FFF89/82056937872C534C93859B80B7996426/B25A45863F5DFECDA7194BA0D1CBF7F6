        private Label CreateSectionLabel(string text, ref int top, int x = 0)
        {
            Label label = new Label
            {
                Text = text,
                Font = new Font("Segoe UI Semibold", 9f),
                ForeColor = Color.FromArgb(55, 65, 81),
                Location = new Point(x, top),
                AutoSize = true
            };
            top += 18;
            return label;
        }

        private TextBox CreateTextBox(int top, int width, int x = 0)
        {
            return new TextBox
            {
                Location = new Point(x, top + 20),
                Width = width
            };
        }

        private void Submit_Click(object sender, EventArgs e)
        {
            if (!ValidateForm())
            {
                return;
            }

            MessageBox.Show(
                "Your document request has been submitted. You will receive updates once it is processed.",
                "Request Submitted",
                MessageBoxButtons.OK,
                MessageBoxIcon.Information);

            Close();
        }

        private void SaveDraft_Click(object sender, EventArgs e)
        {
            MessageBox.Show(
                "Draft saved locally. Return later to complete your submission.",
                "Draft Saved",
                MessageBoxButtons.OK,
                MessageBoxIcon.Information);
            Close();
        }

        private bool ValidateForm()
        {
            if (_cmbDocumentType.SelectedIndex < 0)
            {
                ShowValidation("Please select a document type.");
                return false;
            }

            if (string.IsNullOrWhiteSpace(_txtApplicantName.Text))
            {
                ShowValidation("Applicant name is required.");
                return false;
            }

            if (string.IsNullOrWhiteSpace(_txtContactNumber.Text) || !_txtContactNumber.Text.Any(char.IsDigit))
            {
                ShowValidation("Provide a valid contact number.");
                return false;
            }

            if (string.IsNullOrWhiteSpace(_txtPurpose.Text))
            {
                ShowValidation("Please describe the purpose of the document.");
                return false;
            }

            return true;
        }

        private static void ShowValidation(string message)
        {
            MessageBox.Show(
                message,
                "Incomplete Form",
                MessageBoxButtons.OK,
                MessageBoxIcon.Warning);
        }
    }
}
