            top += 40;

            Controls.Add(CreateSectionLabel("Additional Requirements", ref top));
            _txtAdditionalRequirements = new TextBox
            {
                Location = new Point(0, top),
                Width = 420,
                Height = 90,
                Multiline = true,
                ScrollBars = ScrollBars.Vertical
            };
            Controls.Add(_txtAdditionalRequirements);
            top += 110;

            Panel buttonPanel = new Panel
            {
                Location = new Point(0, top),
                Size = new Size(420, 40)
            };
            Controls.Add(buttonPanel);

            _btnSubmit = new Button
            {
                Text = "Submit Request",
                Size = new Size(200, 36),
                BackColor = Color.FromArgb(27, 153, 87),
                ForeColor = Color.White,
                FlatStyle = FlatStyle.Flat,
                DialogResult = DialogResult.OK
            };
            _btnSubmit.FlatAppearance.BorderSize = 0;
            _btnSubmit.Click += Submit_Click;
            buttonPanel.Controls.Add(_btnSubmit);

            _btnSaveDraft = new Button
            {
                Text = "Save Draft",
                Size = new Size(160, 36),
